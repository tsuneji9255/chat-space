
.message
  .message__upper-info
    .message__talker
      = message.user.name
    .message__date
      = message.created_at.strftime("%Y/%m/%d %H:%M")
  .lower-message
  - if message.content.present?
    .message__text
    = message.content
  = image_tag message.image.url, class: 'lower-message__image' if message.image.present?